package test.date;

public class Date {
	private int year;
	private int month;
	private int day;
	private int[] lastOfMonth = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
	public int getYear() {
		return year;
	}
	public void setYear(int year) {
		this.year = year;
	}
	public int getMonth() {
		return month;
	}
	public void setMonth(int month) {
		if (1>month) {
			month = 1;
		}
		if(month>12) {
			month = 12;
		}
		this.month = month;
		setDay(day);
	}
	public int getDay() {
		return day;
	}
	public void setDay(int day) {
		if (1>day) {
			day = 1;
		}
		if(day>31) {
			day = lastOfMonth[month-1];
		}
		this.day = day;
		
	}

}
